{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["plugin:react/recommended", "airbnb", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "linebreak-style": "off",
    "no-unused-vars": "warn",
    "import/no-unresolved": "off",
    "react/prop-types": "off",
    "default-param-last": "off",
    "jsx-a11y/label-has-associated-control": [
      "warn",
      {
        "required": {
          "some": ["nesting", "id"]
        }
      }
    ],
    "jsx-a11y/label-has-for": [
      "warn",
      {
        "required": {
          "some": ["nesting", "id"]
        }
      }
    ]
  }
}
